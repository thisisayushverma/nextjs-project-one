generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model School {
  id       Int     @id @default(autoincrement())
  name     String
  address  String  @db.VarChar(100)
  city     String  @db.VarChar(50)
  state    String  @db.VarChar(50)
  contact  String  @db.VarChar(10) // validation like len=10 must be handled in frontend or Zod
  email_id String  @unique @db.VarChar(255)
  image    String

  createdAt DateTime @default(now()) // optional: to track record creation
  updatedAt DateTime @updatedAt      // optional: auto update timestamp
}